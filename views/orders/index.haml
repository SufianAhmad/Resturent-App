%table.row
  - @orders.each do |order|
    %tr
      %td
        %input{ type: "checkbox", id: "order-#{order.id}", data: { id: order.id }, class: "mark-done", checked: order.done }
      %td=order.client
      %td
        %ul
          -order.order_items.each do |item|
            %li
              =@dishes.select{ |dish| dish[:id] == item.dish_id }.first[:name]
